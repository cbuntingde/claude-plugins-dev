# Cross-Repository Knowledge Navigator Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GitHub Configuration (Required for repository search)
# =============================================================================
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_ORG=your-company
REPO_PATTERN=*

# =============================================================================
# Slack Configuration (Optional)
# =============================================================================
SLACK_TOKEN=xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxx
SLACK_CHANNELS=#backend,#frontend,#platform,#devops

# =============================================================================
# Jira Configuration (Optional)
# =============================================================================
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_TOKEN=your-jira-api-token
JIRA_PROJECTS=BACKEND,FRONTEND,PLATFORM,DATA,DEVOPS

# =============================================================================
# Confluence Configuration (Optional)
# =============================================================================
CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_TOKEN=your-confluence-api-token
CONFLUENCE_SPACES=TECH,ARCH,RUNBOOKS,DECISIONS

# =============================================================================
# Knowledge Index Configuration
# =============================================================================
INDEX_RETENTION_DAYS=365
INCREMENTAL_INDEX=true
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# Update Schedule (Cron format)
# =============================================================================
# Default: 2 AM daily
# MIN HOUR DAY MONTH DAYOFWEEK
UPDATE_SCHEDULE="0 2 * * *"

# =============================================================================
# Advanced Configuration
# =============================================================================
# Maximum concurrent indexing jobs
MAX_CONCURRENT_JOBS=5

# Timeout for API requests (seconds)
API_TIMEOUT=30

# Enable debug logging
DEBUG=false

# Path to knowledge index
INDEX_PATH=./data/knowledge_index
