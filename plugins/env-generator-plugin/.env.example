# Example .env file generated by env-generator plugin
# This file demonstrates the output format and organization

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp

# Maximum number of connections in the pool
# Type: integer
DATABASE_POOL_MAX=10

# Connection timeout in milliseconds
# Type: integer
DATABASE_TIMEOUT=30000

# ============================================
# API Configuration
# ============================================
# External API base URL
# Type: URL
API_BASE_URL=https://api.example.com

# API authentication key
# Type: string
# Security: Sensitive - keep secret
API_KEY=your_api_key_here

# API timeout in milliseconds
# Type: integer
API_TIMEOUT=5000

# ============================================
# Authentication
# ============================================
# JWT secret key for token signing
# Type: string
# Security: Sensitive - generate a strong random key
JWT_SECRET=your_jwt_secret_here

# JWT expiration time
# Type: duration
JWT_EXPIRES_IN=24h

# Session secret
# Type: string
# Security: Sensitive - keep secret
SESSION_SECRET=your_session_secret_here

# ============================================
# Application Settings
# ============================================
# Application environment (development, staging, production)
# Type: enum
NODE_ENV=development

# Server port
# Type: integer
PORT=3000

# Log level (error, warn, info, debug)
# Type: enum
LOG_LEVEL=info

# Enable debug mode
# Type: boolean
DEBUG=false

# ============================================
# External Services
# ============================================
# Redis connection URL
# Type: URL
REDIS_URL=redis://localhost:6379

# AWS region
# Type: string
AWS_REGION=us-east-1

# AWS S3 bucket name
# Type: string
AWS_S3_BUCKET=my-app-bucket

# SendGrid API key
# Type: string
# Security: Sensitive - keep secret
SENDGRID_API_KEY=your_sendgrid_key_here

# ============================================
# Feature Flags
# ============================================
# Enable new feature
# Type: boolean
FEATURE_NEW_FEATURE=false

# Enable beta features
# Type: boolean
FEATURE_BETA=false

# ============================================
# Monitoring
# ============================================
# Sentry DSN for error tracking
# Type: URL
# Security: Sensitive if project-specific
SENTRY_DSN=

# DataDog API key
# Type: string
# Security: Sensitive - keep secret
DATADOG_API_KEY=
